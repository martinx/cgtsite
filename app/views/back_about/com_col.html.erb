      <p><%=  @com_col.content %></p>
    </div>
    <div id="operate-author">
      <h5>Current Author:  </h5> 
    </div>
    <div id="operate-author">     
      <p><%=  @com_col.author %></p>
    </div>
    <div id="operate-admin">
      <h5>Current Admin: </h5> 
    </div>    
    <div id="operate-admin">
      <p>DerDer</p>
    </div>
    <div id="operate-buttons"> 
      <ul>
        <li><%= link_to "New Comment" ,:action => "com_col_new"%></li>
      </ul>
    </div><!-- End #operate-bottons -->
        
  </div> <!-- end #operate-area -->
    
</div> <!-- end #operate-mgt -->


