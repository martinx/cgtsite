        <p></p>
      </div>
      <div id="operate-author">
        <h5>Current Contact Email:  </h5> 
      </div>
      <div id="operate-author">     
        <p></p>
      </div>
      
      <div id="operate-admin">
        <h5>Current Admin: </h5> 
      </div>    
      <div id="operate-admin">
        <p>DerDer</p>
      </div>
      <% end %>
      <div id="operate-buttons"> 
        <ul>
          <li><%= link_to "New Comment" ,:action => "partners_new"%></li>
        </ul>
      </div><!-- End #operate-bottons -->
        
    </div> <!-- end #operate-area -->
    
  </div> <!-- end #operate-mgt -->
</div> <!-- end #block-mgt -->  