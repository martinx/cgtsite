<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <%= stylesheet_link_tag "employees-comments", :media => "all"  %>
    <%= javascript_include_tag 'prototype' %>
    <%= javascript_include_tag :defaults %>
    <% @title = "CGT Employees Comments" -%>
  </head>
  <body class="employees-login">
    <div id="main">
      <!--   Employees Login Page  -->
      <!--   Employees Login Page Banner -->
      <div id="employees-banner">
        <div id="employees-page">
          <%= image_tag('employee-cgt-logo-red.gif') %>
          <%= image_tag('employee-title-red.gif') %>
          <%= image_tag('employee-ideaslist.gif') %>
        </div>
        <div id="employees-board">
          <%= image_tag('employee-slang.gif') %>
        </div>
      </div>
<!--  End of Employees Login Page Banner -->

<!--   Employees Ideas Page  -->
<div id="employees-buttons"> 
  <ul>
    <li><%= link_to "Home" ,:controller => 'home' %></li>
    <li><%= link_to "Ideas List" ,:action => 'ideaslist' %></li> 
    <li><%= link_to 'Send Ideas',:action => 'sendideas' %></li>  
  </ul>
</div>
<div id="employees-box">
  <!-- Left side of ideas -->
  <div id="employees-left">    
    <!-- Article Area -->
    <div id="title">
      <h4><%= @idea.title %></h4>
    </div>
    <div id="info">
      <p>Author: <%= @idea.author %></p>
      <p>Date: <%=h @idea.updated_at.strftime("%b.,%d,%Y") %></p>
    </div>
    <div id="text_box">
      <p><%= @idea.content %></p>
    </div>
    <!-- Comments Show Area -->

    <div id="comm-area">
      <h4 class="comm-title">Comments</h4>
      <div id="comm-show">
<%= render(:partial => 'com') %>    
      </div>
    </div>
    <!-- Comment Leave Area -->
    <div id="leave-area">
      <h4 class="leave-title">Leave A Comment</h4>
      <% remote_form_for :comment, @comment,:update => 'comm-show', :url => { :action => 'create_comments' }, :html => { :method => :post   } do |f| %>   
        <%= f.error_messages %>          
        <p>
          <%= f.text_field :author, :size => "50" %>
          <%= f.label "Name (Required)"   %>
        </p> 
        <p>
          <%= f.text_area :content, :size => '75'%>
        </p>
        <%= f.hidden_field :idea_id ,:value => @idea.id %>
        <p>
          <%= f.submit "submit",:src => "/images/employees-submit.gif" %>
        </p>
      <% end %>
    </div>
  </div>
  <!-- End of Left side of ideas -->
  <%= render(:partial => 'right_side_bar') %>
  </div>
<!--  End of Employees Ideas  -->

   </div>
  </body>
</html>