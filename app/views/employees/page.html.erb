<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title><%= @title ||= "CGT Employees Login" %></title>
    <%= stylesheet_link_tag "employees-login", :media => "all"  %>
  </head>
  <body class="employees-login">
    <div id="main">
      <!--   Employees Login Page  -->
      <!--   Employees Login Page Banner -->
      <div id="employees-banner">
        <div id="employees-page">
          <%= image_tag('employee-cgt-logo-red.gif') %>
          <%= image_tag('employee-title-red.gif') %>
        </div>
        <div id="employees-board">
          <%= image_tag('employee-slang.gif') %>
        </div>
      </div>
<!--  End of Employees Login Page Banner -->

<%= stylesheet_link_tag "employees-page", :media => "all"  %>
<% @title = "CGT Employees Page" -%>
<div id="employees-buttons"> 
  <ul>
    <li><%= link_to "Home" ,:controller => 'home' %></li>
    <li><%= link_to "Ideas List" ,:action => 'ideaslist' %></li> 
    <li><%= link_to 'Settings',:action => 'setting' %></li>  
  </ul>
</div>
<div id="employees-main">  	
  <h1>Welcome to CGT Employees Page!</h1>
</div>

<div id="employees-logged">
<% if logged_in? %>   
  <p>You are logged in as <%=h current_employee.login %></p>   
  <p><%#Gao=h current_employee.password %><%#Gao= link_to 'Logout',:action => 'login_out' %></p>
<% else %>   
  <p>You are currently not logged in.</p>
  <p>Please click Home button returning to Home Page, then come to Employees Page again.</p>
  <p>   
    <%#Gao= link_to 'Login', :action => 'login' %>  
  </p>   
<% end %>
</div>

