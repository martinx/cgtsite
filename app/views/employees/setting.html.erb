<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <% @title = "CGT Employees Settings" -%>
    <%= stylesheet_link_tag "employees-settings", :media => "all"  %>
  </head>
  <body class="employees-login">
    <div id="main">
      <!--   Employees Login Page  -->
      <!--   Employees Login Page Banner -->
      <div id="employees-banner">
        <div id="employees-page">
          <%= image_tag('employee-cgt-logo-red.gif') %>
          <%= image_tag('employee-title-red.gif') %>
          <%= image_tag('employee-settings.gif') %>
        </div>
        <div id="employees-board">
          <%= image_tag('employee-slang.gif') %>
        </div>
      </div>

<div id="employees-buttons"> 
  <ul>
    <li><%= link_to "Home" ,:controller => 'Home' %></li>
    <li><%= link_to "Ideas List" ,:action => 'ideaslist' %></li> 
    <li><%= link_to 'Settings',:action => 'setting' %></li>  
  </ul>
</div>
<div id="employees-settings">  	
  <% form_tag :action => 'change_password' , :method => :post do -%>
    <div class="info"> <span>Set Your Password</span><br></div>
    <div class="word">
      <p>Please modify your password.</p>
    </div>
    <div class="new"> <p>Your Old Password:</p>  </div><%= flash[:note] %>
    <div class="row"> <%= password_field_tag 'old_password' %> </div>
    <div class="new"> <p>New Password  (at least 6 characters):</p>  </div>
    <div class="row"> <%= password_field_tag 'password' %></div>
    <div class="new"> <p>Confirm:</p>  </div>
    <div class="row"> <%= password_field_tag 'password_confirmation' %> </div>
    <div class="div">
      <%= submit_tag 'Submit' %>
    </div>
  <% end %>
  </div>
<!--  End of Employees Settings  -->

  </div>
  </body>
</html>